Tmax_phaeo            = 16.0         ! [°C] For Blanchard temp fxn: maximum temperature
Topt_phaeo            = 6.7982       ! [°C] For Blanchard temp fxn: optimum temperature
uopt_phaeo            = 0.6903       ! [1/day] For Blanchard temp fxn: optimum growth rate
