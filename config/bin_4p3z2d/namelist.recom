ord_phaeo             = -0.2310      ! phaeocystis ordonnée
expon_phaeo           = 0.0327       ! phaeocystis exponent
reminSi               = 0.02         ! Silicate remineralization base rate [1/day]
k_o2_remin            = 15.0         ! Half-saturation for O2 remineralization [mmol O2/m³]
/

&palimiter_function
